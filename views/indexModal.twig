<!-- MODAL NEW DETTE -->
<div class="modal fade" id="modalNewDette" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nouvelle dette</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/addDebt" class="form-group">
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body" id="newDebtExplication">
                            <i>J'ai prêté y € à x ! x me doit maintenant y €</i>
                        </div>
                    </div>
                    <label for="newDebtDescription">Description : </label>
                    <div class="input-group">
                        <input type="text" placeholder="Description" name="newDebtDescription" id="newDebtDescription" required class="form-control">
                    </div>
                    <label for="newDebtAmmount">Montant : </label>
                    <div class="input-group">
                        <input type="number" step="0.01" id="newDebtAmmount" name="newDebtAmmount" class="form-control" required>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon1">€</span>
                        </div>
                    </div>
                    <label for="newDebtOtherUser">Utilisateur concerné : </label>
                    <div class="input-group">
                        <select name="newDebtOtherUser" id="newDebtOtherUser" class="form-control" required>
                            <option value="-1">Choisir un ami ...</option>
                            {% include 'optionUserForDebt.twig' %}
                        </select>
                    </div>
                    <hr>
                    <div style="padding-top: 10px">
                        <label for="newDebtAntidate">Voulez-vous anti-dater la dette ?</label>
                        <input type="checkbox" name="newDebtAntidate" id="newDebtAntidate">
                    </div>

                    <div id="ifAndtidateTrue" style="display: none">
                        <label for="newDebtDate">Date de la dette : </label>
                        <input type="datetime-local" name="newDebtDate" id="newDebtDate" class="form-control">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>



<table class="table table-hover">
    <thead>
        <th>Ami</th>
        <th>Dette totale</th>
    </thead>
    <tbody>
        {% set total = 0 %}
        {% for debt in debts %}
            {% if debt.ammount < 0 %}
                {% set total = total + debt.ammount %}
                <tr>
                    <td>{{ debt.user }}</td>
                    <td>{{ debt.ammount | round(2, 'common')}}</td>
                </tr>
            {% endif %}
        {% endfor %}
        <tr class="table-active">
            <td style="text-align: right;">Balance des dettes :</td>
            <td><strong>{{ total | round(2, 'common')}}</strong> â‚¬</td>
        </tr>
    </tbody>
</table>
{% extends 'layout.twig' %}

{% block body %}
    {% include "flash.twig" %}
    <div class="row">

        <div class="col-sm-10 offset-sm-1">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text" id="btnGroupAddon"><i class="fa fa-search"></i></div>
                </div>
                <input type="text" class="form-control" placeholder="Ajouter un ami ..." id="search_new_friend">
            </div>
        </div>

        <div class="col-sm-6" style="margin-top: 15px">
            <table class="table table-striped">
                <h3>Mes amis: </h3>
                <thead>
                    <tr>
                        <th>Pr√©nom</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                {% for friend in friends %}
                    {% if friend.confirmed %}
                        <tr>
                            <td>{{ friend.otherUser.prenom }} </td>
                            <td>{{ friend.otherUser.nom }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-sm-6" style="margin-top: 15px">
            <table class="table table-striped">
                <h3>Demandes d'ajout:</h3>
                <thead>
                    <tr>
                        <th>Prenom</th>
                        <th>Nom</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                {% for friend_info in connectedUser.friends %}
                    {% if friend_info.confirmed == false %}
                        <tr>
                            <td>{{ friend_info.otherUser.prenom }}</td>
                            <td>{{ friend_info.otherUser.nom }}</td>
                            <td>{{ friend_info.askDate }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/friends/accept/{{ friend_info.otherUser.email }}" class="btn btn-success"><i class="fa fa-check"></i></a>
                                    <a href="/friends/refuse/{{ friend_info.otherUser.email }}" class="btn btn-danger"><i class="fa fa-times"></i> </a>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}


{% block script %}
    <script type="text/javascript"  src="../javascripts/friends/index.js"></script>
{% endblock %}

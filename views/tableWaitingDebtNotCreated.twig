<table class="table table-hover">
    Demande de dettes reçues, en attente !
    <thead>
        <th>Ami</th>
        <th>Description</th>
        <th>Date</th>
        <th>Montant</th>
        <th>Action</th>
    </thead>
    <tbody>
        {% for debt in waitingDebtsNotCreated %}
                {% set total = total + debt.ammount %}
                <tr>
                    <td>{{ debt.user }}</td>
                    <td>{{ debt.description }}</td>
                    <td>{{ debt.date }}</td>
                    <td>
                        <strong>
                        {% if debt.role == "sender" %}
                            +
                        {% else %}
                            -
                        {% endif %}
                        {{ debt.ammount | round(2, 'common')}}€
                        </strong>
                    </td>
                    <td>
                        <button type="button" class="btn btn-success acceptDebt" id_debt="{{ debt.id }}">Accepter</button>
                        <button type="button" class="btn btn-danger refuseDebt" id_debt="{{ debt.id }}">Refuser</button>
                    </td>
                </tr>
        {% endfor %}
    </tbody>
</table>
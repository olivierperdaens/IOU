{% extends 'layout.twig' %}


{% if balanceTotale > 0 %}
    {% set classAdd = "is-valid" %}
{% else %}
    {% set classAdd = "is-invalid" %}
{% endif %}


{% block body %}
    {% include "indexModal.twig" %}
    {% include "flash.twig" %}
         <div class="row">
             <div class="col-md-10 col-sm-8">
                 <div class="row">
                     <div class="col-md-5 col-sm-4">
                         <h1>{{page.title}}</h1>
                         <p>Bonjour {{ connectedUser.prenom }} {{ connectedUser.nom }} </p>
                     </div>
                     <div class="col-md-7 col-sm-8">
                         <button class="btn btn-success" style="margin-bottom: 35px; margin-right: 10px" data-toggle="modal" data-target="#modalNewDette">You Owe <b>Me</b></button> <i class="fa fa-4x fa-balance-scale"></i> <button class="btn btn-danger" style="margin-bottom:35px;margin-left: 10px" data-toggle="modal" data-target="#modalRemboursement">I Owe <b>You</b></button>
                     </div>
                 </div>
             </div>
             <div class="col-md-2 col-sm-4">
                 <label for="balanceTotal">Balance générale: </label>
                 <div class="input-group">
                     <input type="number" id="balanceTotal" class="form-control {{ classAdd }}" style="font-size: 25px;font-weight: bold" value="{{ balanceTotale | round(2, 'common')}}" disabled>
                     <div class="input-group-append">
                         <span class="input-group-text" id="basic-addon1">€</span>
                     </div>
                 </div>
             </div>
            <div class="col-md-6 col-sm-12">
                {% include "tableDebt.twig" %}
            </div>
             <div class="col-md-6 col-sm-12">
                 {% include "tableDebtIn.twig" %}
                 {% include "tableDebtOut.twig" %}
             </div>
         </div>



{% endblock %}

{% block script %}
    <script type="text/javascript" src="https://unpkg.com/popper.js/dist/umd/popper.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/locale/fr.js"></script>
    <script type="text/javascript" src="../javascripts/debts/index.js"></script>
{% endblock %}